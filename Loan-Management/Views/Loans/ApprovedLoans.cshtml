@model LoanApplicationViewModel

@{
    ViewData["Title"] = "My Approved Loans";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-cash-stack me-2"></i> My Loans
        </h2>
        <span class="text-muted">
            @DateTime.Now.ToString("dddd, dd MMM yyyy")
        </span>
    </div>

    @if (Model.loanApplicationModel != null && Model.loanApplicationModel.Any())
    {
        <div class="table-responsive shadow-sm rounded-3">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light border-bottom">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Approved Amount</th>
                        <th scope="col">Amount Due</th>
                        <th scope="col">Term (Months)</th>
                        <th scope="col">Approved Date</th>
                        <th scope="col">Due Date</th>
                        <th scope="col">Status</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                    @foreach (var loan in Model.loanApplicationModel)
                    {
                        <tr class="bg-white">
                            <td class="text-muted">@count</td>
                            <td class="fw-semibold text-primary">
                                @loan.LoanProduct?.Name
                            </td>
                            <td>@loan.RequestedAmount.ToString("C")</td>
                            <td class="text-danger fw-semibold">
                                @loan.AmountDue.ToString("C")
                            </td>
                            <td>@loan.RepaymentPeriodMonths</td>
                            <td>@loan.ApplicationDate.ToString("dd-MMM-yyyy")</td>
                            <td>@loan.MaturityDate.ToString("dd-MMM-yyyy")</td>
                            <td>
                                @if (loan.Status == "Approved")
                                {
                                    <span class="badge bg-success px-3 py-2 rounded-pill">
                                        <i class="bi bi-check-circle me-1"></i> Approved
                                    </span>
                                }
                                else if (loan.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">
                                        <i class="bi bi-hourglass-split me-1"></i> Pending
                                    </span>
                                }
                                else if (loan.Status == "Rejected")
                                {
                                    <span class="badge bg-danger px-3 py-2 rounded-pill">
                                        <i class="bi bi-x-circle me-1"></i> Rejected
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary px-3 py-2 rounded-pill">@loan.Status</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (loan.Status == "Approved")
                                {
                                    <a asp-action="RepayLoan" asp-controller="Loan" asp-route-loanId="@loan.Id"
                                       class="btn btn-outline-primary btn-sm d-inline-flex align-items-center">
                                        <i class="bi bi-credit-card me-1"></i> Repay
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">â€”</span>
                                }
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm mt-4" role="alert">
            <i class="bi bi-info-circle me-2"></i>
            You have no approved loans at this time.
        </div>
    }
</div>
