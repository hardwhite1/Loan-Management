@model LoanProductsViewModel

@{
    ViewData["Title"] = "Available Loan Products";
}

<h2 class="page-title">Available Loan Products</h2>

<div class="loan-grid">
    @foreach (var loan in Model.loanProducts)
    {
        <div class="loan-card">
            <h5>@loan.Name</h5>
            <p><strong>Interest Rate:</strong> @loan.InterestRate %</p>
            <p><strong>Principal Min:</strong> Ksh@loan.PrincipalAmountMin</p>
            <button class="btn-details">Details</button>
        </div>
    }
</div>

<style>
    /* Page Title */
    .page-title {
        text-align: center;
        color: #0d6efd;
        font-weight: 700;
        margin-bottom: 2rem;
    }

    /* Grid container */
    .loan-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        padding: 1rem 2rem;
    }

    /* Card styling */
    .loan-card {
        background: #fff;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .loan-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }

    /* Card text */
    .loan-card h5 {
        margin-bottom: 0.75rem;
        color: #222;
        font-weight: 600;
    }

    .loan-card p {
        margin: 0.4rem 0;
        color: #444;
    }

    /* Button */
    .btn-details {
        display: inline-block;
        margin-top: 1rem;
        padding: 0.5rem 1rem;
        border: 1px solid #0d6efd;
        background: #fff;
        color: #0d6efd;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-details:hover {
        background: #0d6efd;
        color: #fff;
    }
</style>
