@{
    ViewData["Title"] = "Home Page";
}

@if(User.Identity.IsAuthenticated)
{

    <!-- Hero Section -->
    <div class="bg-gradient-primary text-white text-center py-5 mb-5" style="background: linear-gradient(135deg, #0062E6 0%, #33AEFF 100%);">
        <div class="container">
            <h1 class="display-4 fw-bold">Welcome to FinServe</h1>
            <p class="lead mb-4">Your trusted partner in simple, smart, and secure lending solutions.</p>
            <a href="Loans/Loans" class="btn btn-light btn-lg shadow-sm me-2">View Loan Products</a>
            <a href="/Loans/ApprovedLoans" class="btn btn-outline-light btn-lg shadow-sm">My Loans</a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container mb-5">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-piggy-bank text-primary" style="font-size: 3rem;"></i>
                        <h4 class="mt-3">Flexible Loan Products</h4>
                        <p>Choose from a variety of loan options tailored to meet your personal and business needs.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-speedometer2 text-success" style="font-size: 3rem;"></i>
                        <h4 class="mt-3">Fast Approvals</h4>
                        <p>Experience lightning-fast loan approvals with our automated verification process.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <i class="bi bi-shield-lock text-warning" style="font-size: 3rem;"></i>
                        <h4 class="mt-3">Secure Platform</h4>
                        <p>Your data and transactions are protected with bank-grade security and encryption.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@if(!User.Identity.IsAuthenticated)
{
    <!-- Call to Action Section -->
    <div class="bg-light py-5 text-center">
        <div class="container">
            <h2 class="fw-bold mb-4">Ready to take the next step?</h2>
            <p class="lead mb-4">Sign in to explore loan options, apply online, and manage your existing loans with ease.</p>
            <a href="/Identity/Account/Login" class="btn btn-primary btn-lg shadow-sm me-2">Login</a>
            <a href="/Identity/Account/Register" class="btn btn-outline-primary btn-lg shadow-sm">Register</a>
        </div>
    </div>
}

