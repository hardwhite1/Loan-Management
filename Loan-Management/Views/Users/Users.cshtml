@model Loan_Management.Models.UsersViewModel

@{
    ViewData["Title"] = "Users Management";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">@ViewData["Title"]</h2>

    <!-- Administrators Table -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Administrators</h5>
            <a asp-controller="Users" asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-person-plus"></i> Add Admin
            </a>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Adminstrators != null && Model.Adminstrators.Any())
                    {
                        foreach (var user in Model.Adminstrators)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Email</td>
                                <td class="text-center">
                                    <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm me-1">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm me-1">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                    <a asp-controller="Users" asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-secondary btn-sm">
                                        <i class="bi bi-shield-lock"></i> Roles
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No administrators found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Everyone Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Everyone</h5>
            <a asp-controller="Users" asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-person-plus"></i> Add User
            </a>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Everyone != null && Model.Everyone.Any())
                    {
                        foreach (var user in Model.Everyone)
                        {
                            <tr>
                                <td>@user.Id</td>
                                <td>@user.Email</td>
                                <td class="text-center">
                                    <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm me-1">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm me-1">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                    <a asp-controller="Users" asp-action="ManageRoles" asp-route-id="@user.Id" class="btn btn-secondary btn-sm">
                                        <i class="bi bi-shield-lock"></i> Roles
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No users found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
